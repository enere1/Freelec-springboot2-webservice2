{{>layout/header}}

<h1>ARTICLE REGISTRATION</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">TITLE</label>
                <input type="text" class="form-control" id="title" placeholder="INSERT TITLE">
            </div>
            <div class="form-group">
                <label for="author">WRITER</label>
                <input type="text" class="form-control" id="author" value="{{userName}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">CONTENT</label>
                <textarea class="form-control" id="content" placeholder="INSERT CONTENT"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">CANCLE</a>
        <button type="button" class="btn btn-primary" id="btn-save">REGISTRATION</button>
    </div>
</div>

<div id="disqus_thread"></div>

{{>layout/footer}}