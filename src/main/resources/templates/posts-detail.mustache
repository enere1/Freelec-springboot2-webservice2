    showTotalResult();

    function showTotalResult() {

            var id = $('#id').val();
            var str = "";
            var totalLikeUL = $(".totalLike ul a");

            $.ajax({
            type: 'GET',
            url: '/api/v1/posts/like/' + id,
            dataType: 'json',
            contentType: 'application/json; charset = utf-8',
            }).done(function (result) {
            str += "<li>"+result+"</li>";
            totalLikeUL.html(str);
            }).fail(function (error) {
            alert(JSON.stringify(error));
            });
        }
});




