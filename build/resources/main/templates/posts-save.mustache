{{>layout/header}}

<style>
    .uploadResult {
        width: 100%;
        background-color: gray;
    }

    .uploadResult ul {
        display: flex;
        flex-flow: row;
        justify-content: center;
        align-items: center;
    }

    .uploadResult ul li {
        list-style: none;
        padding: 10px;
    }

    .uploadResult ul li img {
        width: 100px;
    }
</style>

<style>
    .bigPictureWrapper {
        position: absolute;
        display: none;
        justify-content: center;
        align-items: center;
        top:0%;
        width:100%;
        height:100%;
        background-color: gray;
        z-index: 100;
    }

    .bigPicture {
        position: relative;
        display:flex;
        justify-content: center;
        align-items: center;
    }
</style>

<h1>ARTICLE REGISTRATION</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form role = "form">
            <div class="form-group">
                <label for="title">TITLE</label>
                <input type="text" class="form-control" id="title" placeholder="INSERT TITLE">
            </div>
            <div class="form-group">
                <label for="author">WRITER</label>
                <input type="text" class="form-control" id="author" value="{{userName}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">CONTENT</label>
                <textarea class="form-control" id="content" placeholder="INSERT CONTENT"></textarea>
            </div>
            <div class='uploadDiv'>
                <input type='file' name='uploadFile' multiple>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">CANCLE</a>
        <button type="submit" class="btn btn-primary" id="btn-save">REGISTRATION</button>
    </div>
</div>

<div class="uploadResult">
    <ul>

    </ul>
</div>

<div id="disqus_thread"></div>

{{>layout/updateFooter}}